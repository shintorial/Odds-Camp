<div class="sign-in-container">
    <div class="sign-in-header">
        <h2 class="sign-in-title">
            Login to Odds Camp
        </h2>
    </div>

    <div class="sign-in-form-container">
        <div class="sign-in-form-box">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign-in-form" }) do |f| %>
            <div class="form-group">
                <%= f.label :email, class: "form-label" %>
                <div>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :password, class: "form-label" %>
                <div>
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
                </div>
            </div>

            <div>
                <%= f.submit "Log in", class: "sign-in-button" %>

                <div class="divider-text">
                    <span>Or</span>
                </div>

                <%= link_to "Register", new_registration_path(resource_name), class: "sign-up-link" %>
            </div>
            <% end %>
        </div>
    </div>
</div>